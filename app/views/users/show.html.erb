<div class="contents row">
<%#  %>
<p><%= @nickname %>さんの出品一覧</p>
<br>
  <% if @items.present? %>
    <ul class='item-lists'>
      <% @items&.each do |item| %>
        <%= render partial: "shared/item", locals: { item: item } %>
      <% end %>
    </ul>
  <% else %>
  <br>
    <p>出品している商品はありません。<p>
  <% end %>
</div>

