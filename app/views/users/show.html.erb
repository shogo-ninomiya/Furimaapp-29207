<div class="contents row">
<p><%= @nickname %>さんのお気に入り一覧</p>
<br>
  <% if @user.likes.present? %>
    <ul class='item-lists'>
      <% @user.likes.each do |like| %>
        <%= render partial: "shared/like", locals: { like: like } %>
      <% end %>
    </ul>
  <% else %>
